class Commands:
    FORWARD = {"Forward", 7}
    RIGHT = {"Right", 7}
    LEFT = {"Left", 7}
    LOOK = {"Look", 7}
    INVENTORY = {"Inventory", 1}
    BROADCAST = {"Broadcast", 7}
    CONNECT_NBR = {"Connect_nbr", 0}
    FORK = {"Fork", 42}
    EJECT = {"Eject", 7}
    TAKE = {"Take", 7}
    SET = {"Set", 7}
    INCANTATION = {"Incantation", 300}


def main():
    args = zp.get_args()
    sock = znu.con_to_server(args)
    zp.print_log(znu.recv_from_server(sock))
    Player = znu.get_player_infos(sock, args)
    input()



try:
    main()
except Exception as e:
    print(e)
    exit(84)